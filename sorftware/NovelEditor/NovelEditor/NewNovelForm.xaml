<Window x:Class="NovelEditor.NewNovelForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovelEditor"
        mc:Ignorable="d"
        xmlns:pu="clr-namespace:EasyGoodLookUI;assembly=EasyGoodLookUI"
        Title="NewNovel" Height="150" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <pu:InputBox x:Name="InputBox_FileName" NameStr="名称:" ValueStr=""></pu:InputBox>
        <pu:InputBox x:Name="InputBox_FilePath" NameStr="保存路径:" ValueStr="" Grid.Row="1"></pu:InputBox>
        <Button x:Name="Button_FilePathSelect" Content="选择" Grid.Row="1" Grid.Column="1" Click="Button_FilePathSelect_Click"></Button>
        <Button x:Name="Button_Save" Content="确定" Grid.Row="2" Grid.Column="1" Click="Button_Save_Click"></Button>
    </Grid>
</Window>
