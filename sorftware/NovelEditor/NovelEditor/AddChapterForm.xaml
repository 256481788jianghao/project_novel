<Window x:Class="NovelEditor.AddChapterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovelEditor"
        mc:Ignorable="d"
        xmlns:pu="clr-namespace:EasyGoodLookUI;assembly=EasyGoodLookUI"
        Title="Add Chapter" Height="150" Width="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <pu:InputBox x:Name="InputBox_ChapterIndex" NameStr="章号：" ValueStr=""></pu:InputBox>
        <pu:InputBox x:Name="InputBox_ChapterName" NameStr="章名：" ValueStr="" Grid.Row="1"></pu:InputBox>
        <Button x:Name="Button_Add" Content="确定" Grid.Row="2" Click="Button_Add_Click"></Button>
    </Grid>
</Window>
